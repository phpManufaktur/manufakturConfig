<div id="manufaktur_config">
  {if $navigation.is_active == 1}
    <ul class="navigation">
    {foreach $navigation.items nav}
      <li{if $nav.is_active == 1} class="selected"{/if} title="{I18n($nav.text)}">
        <a href="{$nav.link}">
          {I18n($nav.text)}
        </a>
      </li>
    {/foreach}
    </ul>
  {/if}
  {if $error == 1}
    {include('error.lte')}
  {else}
    {$content}
  {/if}
</div>
