<div id="mc_dialog"> 
  <form name="{$form.name}" action="{$form.action}" method="post">
    <input type="hidden" name="{$action.name}" value="{$action.value}" />
    <input type="hidden" name="{$request_items.name}" value="{$request_items.value}" />
    {if isset($page.name)}<input type="hidden" name="{$page.name}" value="{$page.value}" />{/if}
    <h2>{I18n('Settings')}</h2>
    <div class="{if count_characters($message.text) > 0}message{else}intro{/if}">
      {if count_characters($message.text) > 0}
        {$message.text}
      {else}
        {I18n('Edit the settings for {{ module_name }}.', array(module_name=$module_name))}
      {/if}
    </div>
    {$fieldset = 'ZERO'}
    {$fieldset_open = 'FALSE'}
    {foreach $items item}
      <div class="mc_clear"></div>
      {if (($fieldset != $item.set) && ($item.set != 'NONE'))}
        {if $fieldset_open == 'TRUE'}
          </fieldset>
        {else}
          {$fieldset_open = 'TRUE'}
        {/if}
        {$fieldset = $item.set}
        <fieldset>
        <legend>{$item.set}</legend>
      {elseif (($item.set == 'NONE') && ($fieldset_open == 'TRUE'))}
        {$fieldset_opne = 'FALSE'}</fieldset>
      {/if}
      
      <div class="mc_label"><label for="{$item.name}">{I18n($item.label)}</label></div>
      <div class="mc_value">
        {if (($item.type == 'LIST') || ($item.type == 'TEXT'))}
          <textarea name="{$item.name}">{$item.value}</textarea> 
        {elseif $item.type == 'BOOLEAN'}
          <select name="{$item.name}">
            <option value="1"{if $item.value == '1'} selected="selected"{/if}>{I18n('Yes')}</option>
            <option value="0"{if $item.value == '0'} selected="selected"{/if}>{I18n('No')}</option>
          </select>
        {else}
          <input type="text" name="{$item.name}" value="{$item.value}" />
        {/if}
      </div>
      <div class="mc_hint">{I18n($item.hint)}</div>
    {/foreach}
    {if $fieldset_open == 'TRUE'}
      <div class="mc_clear"></div>
      </fieldset>
    {/if}
    <div class="mc_clear"></div>
    <div class="mc_xml_action">
      <fieldset>
        <legend>{I18n('Import / Export')}</legend>
        <div class="mc_label">{I18n('Settings')}</div>
        <div class="mc_value">
          <select name="{$xml.name}">
            {foreach $xml.items item}
            <option value="{$item.value}"{if $item.value == $xml.value} selected="selected"{/if}>{I18n($item.text)}</option>
            {/foreach}
          </select>
        </div>
        <div class="mc_hint">{I18n('To import settings from a XML file or to create a XML file from the settings please select the action you wish to perform.')}</div>
        <div class="mc_clear"></div>
      </fieldset>
    </div>
    <div class="mc_submit">
      <input type="submit" value="{I18n('OK')}" />&nbsp;
      <input type="button" value="{I18n('Abort')}" onclick="javascript: window.location = '{$form.action}'; return false;" />
    </div>
  </form>
</div>